<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_page_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_sage">

    <ImageButton
        android:id="@+id/fragment_main_smiley_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/activity_main_blank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_main_smiley_image_view"/>

    <ImageButton
        android:id="@+id/activity_main_note_btn"
        android:layout_width="wrap_content"
        android:layout_height="147dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_note_add_black"
        />

    <ImageButton
        android:id="@+id/activity_main_pie_btn"
        android:layout_width="wrap_content"
        android:layout_height="147dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:src="@drawable/circular_chart3"
        />

    <ImageButton
        android:id="@+id/activity_main_history_btn"
        android:layout_width="wrap_content"
        android:layout_height="145dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_history_black" />

</RelativeLayout>